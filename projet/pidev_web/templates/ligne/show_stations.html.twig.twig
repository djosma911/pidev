{# templates/ligne/show_stations.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Stations liées à la ligne {{ ligne.nomLigne }}{% endblock %}

{% block body %}
    <h1>Stations liées à la ligne {{ ligne.nomLigne }}</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom de la station</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            {% for station in stations %}
                <tr>
                    <th scope="row">{{ station.id }}</th>
                    <td>{{ station.nomStation }}</td>
                    <td>{{ station.description }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ligne_show', {'id': ligne.id}) }}" class="btn btn-primary">Retour à la page de la ligne</a>
{% endblock %}
